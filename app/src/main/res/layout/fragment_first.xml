<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.giveback.newUserFragments.FirstFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Let's get you started"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_below="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="What's your name?"/>

    <CheckBox
        android:id="@+id/cbAdmin"
        android:layout_below="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Are you an Admin?"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn"
        android:src="@drawable/icons8_right_50"
        android:tint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="jumpToPage"/>

</RelativeLayout>
